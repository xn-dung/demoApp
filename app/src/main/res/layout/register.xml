<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_app"
            android:contentDescription="App Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/logoImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/textRegisterName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editRegisterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@id/textRegisterName"
            app:layout_constraintTop_toTopOf="@id/textRegisterName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/textRegisterEmail"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textRegisterName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editRegisterEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toEndOf="@id/textRegisterEmail"
            app:layout_constraintTop_toTopOf="@id/textRegisterEmail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Phone -->
        <TextView
            android:id="@+id/textRegisterPhone"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textRegisterEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editRegisterPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:inputType="phone"
            app:layout_constraintStart_toEndOf="@id/textRegisterPhone"
            app:layout_constraintTop_toTopOf="@id/textRegisterPhone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/textRegisterAddress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textRegisterPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editRegisterAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/textRegisterAddress"
            app:layout_constraintTop_toTopOf="@id/textRegisterAddress"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Username -->
        <TextView
            android:id="@+id/textRegisterUsername"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textRegisterAddress"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editRegisterUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/textRegisterUsername"
            app:layout_constraintTop_toTopOf="@id/textRegisterUsername"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Password -->
        <TextView
            android:id="@+id/textRegisterPassword"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textRegisterUsername"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editRegisterPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/textRegisterPassword"
            app:layout_constraintTop_toTopOf="@id/textRegisterPassword"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Confirm Password -->
        <TextView
            android:id="@+id/textConfirmPassword"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textRegisterPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/textConfirmPassword"
            app:layout_constraintTop_toTopOf="@id/textConfirmPassword"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Register button -->
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/textConfirmPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Error message -->
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:minHeight="40dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>